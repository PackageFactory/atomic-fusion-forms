{
    "description": "Forms powered by atomic fusion",
    "type": "neos-package",
    "name": "packagefactory/atomicfusion-forms",
  	"license": "GPL-3.0+",
  	"authors": [
  		{
  			"name": "Wilhelm Behncke",
  			"email": "wilhelm.behncke@googlemail.com",
  			"role": "Developer"
  		}
  	],
    "require": {
        "typo3/flow": "*",
        "typo3/typoscript": "*"
    },
    "autoload": {
        "psr-0": {
            "PackageFactory\\AtomicFusion\\Forms": "Classes/"
        }
    },
    "extra": {
        "neos": {
            "package-key": "PackageFactory.AtomicFusion.Forms"
        }
    },
    "scripts": {
        "test": [
          "rm -f Build/Travis/Packages/Application/PackageFactory.AtomicFusion.Forms",
          "cd Build/Travis && composer install",
          "ln -s $(pwd) Build/Travis/Packages/Application/PackageFactory.AtomicFusion.Forms",
          "Build/Travis/bin/phpunit --coverage-clover=coverage.xml -c Build/Travis/phpunit.xml"
        ],
        "test:coverage": [
          "rm -f Build/Travis/Packages/Application/PackageFactory.AtomicFusion.Forms",
          "cd Build/Travis && composer install",
          "ln -s $(pwd) Build/Travis/Packages/Application/PackageFactory.AtomicFusion.Forms",
          "Build/Travis/bin/phpunit --coverage-html=Build/Reports/Coverage -c Build/Travis/phpunit.xml",
          "xdg-open Build/Reports/Coverage/index.html"
        ]
    }
}
